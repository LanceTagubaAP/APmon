<%- include("partials/top") %>
  <title>Signup</title>
  </head>

  <body class="no-grid-layout">
    <form>
      <main class="mainSignup">
        <form>
          <div class="signupform">
            <div class="signupTitle">
              <h3>Account aanmaken </h3>
            </div>
            <div class="avatar"></div>
            <div class="signupArrows">
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>

            <input class="textField" type="username" class="form-control" id="usernameInput"
              placeholder="Kies een gebruikersnaam">
            <input class="textField" type="password" class="form-control" id="passwordInput"
              placeholder="Kies een wachtwoord">

            <div class="beginPokemon">
              <h3 class="starterPokemonText">Kies een begin pokemon</h3>
              <% for (let i = 0 ;i<3;i++) { %>
                <input type="radio" name="radio" />
              <label for="r<%= i+1 %>">
                <img class="beginPokemonImg" id="r<%= i+1 %>"src=<%= sprites[i] %>></img  >
              </label>
              <%} %>
