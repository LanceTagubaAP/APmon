<%- include("partials/top") %>
<title>APMon</title>
</head>
<body id="pokeDex">
<%- include("partials/header") %>
<main class="pokedexMain">
    <div class="mainContentPokedex">
        <div class="InfoPokemonPokedex">
            <section class="pokedexNameSection">
                <p class="pokedexNameDescription"><%- pokemonDetail.id %>. <%- pokemonDetail.name %></p>            
            </section>    
            <img class="selectedPokemonPokedex" src="<%- pokemonDetail.front_default %>" alt="<%- pokemonDetail.name %>">
            
            <section class="pokedexDescription">
                <p class="pokedexDescriptionText">TYPE: <%- pokemonDetail.types.join(', ') %></p>
                <p class="pokedexDescriptionText">LEVENSPUNTEN: <%- pokemonDetail.maxHealth %></p>
                <p class="pokedexDescriptionText">AANVALSPUNTEN: <%- pokemonDetail.attack %></p>
                <p class="pokedexDescriptionText">VERDEDIGINGSPUNTEN: <%- pokemonDetail.defense %></p>
                <p class="pokedexDescriptionText"><%- pokemonDetail.description %></p>
                
            </section>
            
                
            </section>
            <div class="pokedexBottom">
                <button class="PokedexBottomButtons"><a href="/mainpage">Partner</a></button>
                <button class="PokedexBottomButtons"><a href="/compare/<%= pokemonDetail.id %>">Vergelijken</a></button>
                <button class="PokedexBottomButtons"><a href="/pokedex">Terug</a></button>
            </div>
        </div>
    </div>
</main>
<%- include("partials/bottom") %>
