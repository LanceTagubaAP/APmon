<%- include("partials/top") %>
    <title>APMon</title>
</head>
<body id="pokeDex">
<%- include("partials/header") %>
    <main class="pokedexMain">
        <div class="mainContentPokedex">

         <div class="PokedexName">
         </div>   

         <div class="pokedexSearchAndFilter">
            <form action="/action_page.php">
              <input type="text" placeholder="Zoeken.." name="search">
            </form>
          </div>

        <div class="InfoPokemonPokedex">
            
            <section class="pokedexNameSection">
                <p class="pokedexNameDescription"><%- pokemon.id %>. <%- pokemon.name %></p>            
            </section>    
        <img class="selectedPokemonPokedex" src="<%- pokemon.front_default %>" alt="">
        <section class="pokedexDescription">
            <p class="pokedexDescriptionText">TYPE: <%- pokemon.types %></p>
            <p class="pokedexDescriptionText">LEVENSPUNTEN: <%- pokemon.maxHealth %></p>
            <p class="pokedexDescriptionText">AANVALSPUNTEN: <%- pokemon.attack %></p>
            <p class="pokedexDescriptionText">VERDEDIGINGSPUNTEN: <%- pokemon.defense %></p>
            <p class="pokedexDescriptionText"><%- pokemon.description %></p>
        </section>
        <div class="pokedexBottom">
            <button class="PokedexBottomButtons"><a href="/mainpage"> Partner</a></button>
         <button class="PokedexBottomButtons"><a href="/compare/<%= pokemon.id %>"> Vergelijken</a></button>
         <button class="PokedexBottomButtons"><a href="/mainpage">Terug</a></button>
        </div>
    </div>

    <div class="PokedexList">
        <table>
            <tbody>
                <% for (let pokemon of data) { %>
                    <tr>
                        <td><%- pokemon.id %></td>
                        <td><a href="/pokedex/<%= pokemon.id %>"><img src="<%- pokemon.icon %>" alt=""> <%- pokemon.name %></a></td>
                        <td><% if (pokemon.isCatched) { %>
                            <div class="text-center">
                                <div class="rounded-circle bg-success" style="width: 20px; height: 20px;"></div>
                            </div>
                        <% } else { %>
                            <div class="text-center">
                                <div class="rounded-circle bg-danger" style="width: 20px; height: 20px;"></div>
                            </div>
                        <% } %> </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>



</div>
    </main>
<%- include("partials/bottom") %>